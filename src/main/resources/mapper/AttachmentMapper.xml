<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zx.app.web.mapper.AttachmentMapper">
    <select id="findById" parameterType="int" resultType="zx.app.web.model.entity.Attachment">
        select a.id,
               a.username,
               a.emai,
               a.password,
               a.upload_time        uploadTime,
               a.size,
               a.suffix,
               a.thumb_path,
               a.path,
        FROM attachments a where a.id = #{id}
    </select>

</mapper>